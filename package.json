{
  "name": "harmonychain",
  "version": "1.0.0",
  "description": "Decentralized music platform built on Harmony Network",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "setup": "npm install && npm run build",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "dev:contracts": "cd apps/contracts && npm run dev"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "typescript": "^5.1.6",
    "@types/node": "^20.5.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "license": "MIT"
}